@page "/Account/Login"
@model ChatBeet.Pages.Account.LoginModel
@{
}

<h1>Log In</h1>
@if (!string.IsNullOrEmpty(Model.ValidationMessage))
{
    <p class="text-danger">@Model.ValidationMessage</p>
}
@if (string.IsNullOrEmpty(Model?.LoginInfo?.Nick))
{
    <form asp-page="/Account/Login" method="post">
        <div class="form-group">
            <label asp-for="LoginInfo.Nick"></label>
            <input asp-for="LoginInfo.Nick" class="form-control" autofocus />
            <span class="text-danger" asp-validation-for="LoginInfo.Nick"></span>
        </div>
        <input asp-for="ReturnUrl" type="hidden" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
else
{
    <form asp-page="/Account/Login" method="post">
        <p>You have been PM'd a login token.  Please copy it and paste below.</p>
        <div class="form-group">
            <label asp-for="LoginInfo.Nick"></label>
            <input asp-for="LoginInfo.Nick" class="form-control" disabled />
            <span class="text-danger" asp-validation-for="LoginInfo.Nick"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginInfo.AuthToken"></label>
            <input asp-for="LoginInfo.AuthToken" class="form-control" autofocus />
            <span class="text-danger" asp-validation-for="LoginInfo.AuthToken"></span>
        </div>
        <input asp-for="LoginInfo.Nick" type="hidden" />
        <input asp-for="ReturnUrl" type="hidden" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}