@page
@{
    ViewData["Title"] = "Console";
}

<h1>Console</h1>
@model ChatBeet.Queuing.OutputMessage

<form onsubmit="event.preventDefault()" class="mb-5">
    <h2>Send Message</h2>
    <div class="form-group">
        <label asp-for="Channel"></label>
        <input asp-for="Channel" class="form-control" placeholder="#carrots">
        <span asp-validation-for="Channel"></span>
    </div>
    <div class="form-group">
        <label asp-for="OutputType"></label>
        <select asp-for="OutputType" asp-items="Html.GetEnumSelectList<ChatBeet.Queuing.Rules.OutputType>()" class="custom-select"></select>
        <span asp-validation-for="OutputType"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input asp-for="Content" class="form-control" placeholder="Hello world!">
        <span asp-validation-for="Content"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

<h2>Manage Rules</h2>
<button role="button" class="btn btn-outline-primary">Download</button>
<button role="button" class="btn btn-primary">Reload</button>
<form onsubmit="event.preventDefault()" class="d-flex flex-row mt-2">
    <div class="custom-file">
        <input type="file" class="custom-file-input">
        <label class="custom-file-label">Choose file</label>
    </div>
    <button role="button" class="btn btn-outline-primary ml-2">Upload</button>
</form>